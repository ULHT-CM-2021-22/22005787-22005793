<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/raio_pretendido"
                android:drawableLeft="@drawable/ic_target"
                android:layout_height="60dp"
                android:layout_width="300dp"
                android:text="@string/raio"
                android:gravity="fill_vertical"
                android:textSize="22dp"
                />


            <CheckBox android:id="@+id/raio_50km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_50km"
                android:onClick="onCheckboxClicked"/>
            <CheckBox android:id="@+id/raio_150km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_150km"
                android:onClick="onCheckboxClicked"/>
            <CheckBox android:id="@+id/raio_300km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_300km"
                android:onClick="onCheckboxClicked"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/distrito_filtros"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_region"
                android:gravity="fill_vertical"
                android:text="@string/district_filters"
                android:textSize="22dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button_region_filter"
                android:text="@string/click"
                android:textColor="@color/orange"
                android:background="@android:color/transparent"/>







        </LinearLayout>

    </LinearLayout>


</FrameLayout>