<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/fogo"
                android:gravity="center"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="220dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="4dp"
                        app:cardMaxElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageview5"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="2dp"
                                android:src="@drawable/ic_region">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageview5"
                                android:layout_marginStart="56dp"
                                android:layout_marginTop="-46dp"
                                android:layout_marginBottom="10dp"
                                android:text="@string/region"
                                android:textAlignment="center"
                                android:textSize="15sp">

                            </TextView>

                            <TextView
                                android:id="@+id/text_region"
                                android:layout_width="match_parent"
                                android:layout_height="63dp"
                                android:layout_below="@id/imageview5"
                                android:text="@string/select_region"
                                android:textAlignment="center"
                                android:textSize="15sp">


                            </TextView>

                            <Button
                                android:id="@+id/button_region"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent" />



                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="4dp"
                        app:cardMaxElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageview2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/ic_fireplace">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageview2"
                                android:layout_marginStart="56dp"
                                android:layout_marginTop="-46dp"
                                android:layout_marginBottom="10dp"
                                android:text="@string/region_fires"
                                android:textSize="15sp">

                            </TextView>

                            <TextView
                                android:id="@+id/fogos_regiao"
                                android:layout_width="match_parent"
                                android:layout_height="63dp"
                                android:layout_below="@id/imageview2"
                                android:textAlignment="center"
                                android:textSize="15sp">

                            </TextView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="4dp"
                        app:cardMaxElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageview4"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/ic_warning">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageview4"
                                android:layout_marginStart="56dp"
                                android:layout_marginTop="-46dp"
                                android:layout_marginBottom="10dp"
                                android:text="@string/region_risk"
                                android:textAlignment="center"
                                android:textSize="17sp">

                            </TextView>

                            <TextView
                                android:id="@+id/risco_regiao"
                                android:layout_width="match_parent"
                                android:layout_height="63dp"
                                android:layout_below="@id/imageview4"
                                android:text="Elevado"
                                android:textAlignment="center"
                                android:textSize="15sp">

                            </TextView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="4dp"
                        app:cardMaxElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageview1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/ic_new_fire">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageview1"
                                android:layout_marginStart="56dp"
                                android:layout_marginTop="-46dp"
                                android:layout_marginBottom="10dp"
                                android:text="@string/total_fires"
                                android:textSize="15sp">

                            </TextView>

                            <TextView
                                android:id="@+id/fogos_total"
                                android:layout_width="match_parent"
                                android:layout_height="63dp"
                                android:layout_below="@id/imageview1"
                                android:textAlignment="center"
                                android:textSize="15sp">

                            </TextView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="4dp"
                        app:cardMaxElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageview3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/ic_new_fire">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageview3"
                                android:layout_marginStart="56dp"
                                android:layout_marginTop="-46dp"
                                android:layout_marginBottom="10dp"
                                android:text="@string/fire_average"
                                android:textAlignment="center"
                                android:textSize="14sp">

                            </TextView>

                            <TextView
                                android:id="@+id/media_fogos_regiao"
                                android:layout_width="match_parent"
                                android:layout_height="63dp"
                                android:layout_below="@id/imageview3"
                                android:textAlignment="center"
                                android:textSize="15sp">

                            </TextView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>

